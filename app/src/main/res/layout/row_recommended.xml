<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="16dp">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="210dp"
        android:layout_height="230dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ellipse_49"
                android:scaleType="fitXY"
                android:src="@drawable/ic_profile"

                />

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="44dp"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/india_uttorpodesh"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeRegular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/locationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="44dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/india"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeSmall"
                android:textStyle="normal"
                app:drawableStartCompat="@drawable/ic_mappin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTV" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginRegular"
                android:alpha=".6"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/bookmarkIV"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bookmark" />
            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>